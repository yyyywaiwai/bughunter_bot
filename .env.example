DISCORD_BOT_TOKEN=your_token_here
# Optional: for faster slash command sync (guild-only). If empty, global sync.
DISCORD_GUILD_ID=
# Force clear + re-sync application commands on startup (useful for signature mismatch)
DISCORD_FORCE_COMMAND_SYNC=

# Comma-separated Discord user IDs allowed to approve dangerous actions
OWNER_IDS=123456789012345678

# Forum channel ID -> repo path map (JSON). Relative paths are resolved from bot root (bughunter_bot).
FORUM_REPO_MAP={"111111111111111111":"./repos/iMonos","222222222222222222":"./repos/IIJWidget"}

# Optional: repo-specific base branches (JSON). Defaults to DEFAULT_BASE_BRANCH if not set.
REPO_BASE_BRANCH_MAP={"111111111111111111":"main","222222222222222222":"main"}
DEFAULT_BASE_BRANCH=main

# Worktree root (relative to this bot directory if relative)
WORKTREE_ROOT=./worktrees

# Claude Agent SDK options
CLAUDE_MODEL=
CLAUDE_ALLOWED_TOOLS=Read,Write,Edit
CLAUDE_PERMISSION_MODE=acceptEdits
CLAUDE_MAX_TURNS=20
CLAUDE_SYSTEM_PROMPT=
ANTHROPIC_API_KEY=

# Optional: third-party API routing (unofficial from Claude Code's perspective).
# Z.AI docs recommend the Anthropic-compatible endpoint below.
# ANTHROPIC_BASE_URL=https://api.z.ai/api/anthropic
# ANTHROPIC_AUTH_TOKEN=your_zai_api_key
# ANTHROPIC_API_KEY=""  # some providers require this to be explicitly empty
ANTHROPIC_BASE_URL=
ANTHROPIC_AUTH_TOKEN=

# GitHub CLI auth (if gh is used for PR creation)
# Prefer GH_TOKEN or GITHUB_TOKEN for gh auth
GH_TOKEN=
GITHUB_TOKEN=
